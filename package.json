{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Online portfolio for Nasir Mohammad",
  "main": "index.js",
  "scripts": {
    "client-dev": "cd app-nm && npm run ng serve",
    "client-prod": "cd app-nm && npm run build-prod",
    "client-link": "cd app-nm && ng lint",
    "server-dev": "cd server && cross-env npm run server-dev",
    "server-prod": "cd server && npm run server-prod",
    "build-client": "cd app-nm && npm run build-prod",
    "build-server": "cd server && npm run build",
    "all-dev": "concurrently \"npm:client-dev\" \"npm:server-dev\"",
    "all-prod": "concurrently \"npm:client-prod\" \"npm:server-prod\"",
    "start": "cd server && npm start",
    "test-ng": "cd app-nm && npm run test",
    "test-ci": "cd app-nm && npm run test-headless",
    "install-client": "cd app-nm && npm install",
    "install-server": "cd server && npm install",
    "preinstall": "npm run install-server && npm run install-client",
    "prettier-format": "prettier --print-width 80 --single-quote --trailing-comma none --write **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c3mohamn/portfolio.git"
  },
  "keywords": [
    "Nasir",
    "Mohammad",
    "Portfolio",
    "Angular",
    "App",
    "Website",
    "Mongo",
    "Db",
    "Resume",
    "Blog",
    "Express",
    "Node",
    "Typescript"
  ],
  "author": "Nasir Mohammad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/c3mohamn/portfolio/issues"
  },
  "engines": {
    "node": "11.x",
    "npm": "6.x"
  },
  "homepage": "https://github.com/c3mohamn/portfolio#readme",
  "devDependencies": {
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "npm-run-all": "^4.1.5"
  }
}
